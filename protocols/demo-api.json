{
  "name": "demo-api",
  "version": "1.0.0",
  "description": "Demo API protocol for hackathon demonstration",
  "author": "Hackathon Demo",
  "license": "MIT",
  "authentication": {
    "type": "api_key",
    "location": "header",
    "name": "X-API-Key"
  },
  "endpoints": [
    {
      "name": "getPrice",
      "method": "GET",
      "path": "https://api.coindesk.com/v1/bpi/currentprice.json",
      "description": "Get current Bitcoin price from CoinDesk",
      "parameters": [],
      "response": {
        "type": "object",
        "description": "Bitcoin price information"
      },
      "authentication": false
    },
    {
      "name": "getPoolData",
      "method": "GET",
      "path": "https://httpbin.org/json",
      "description": "Get pool data (demo endpoint)",
      "parameters": [
        {
          "name": "poolId",
          "type": "string",
          "description": "Pool identifier",
          "required": false,
          "default": "btc-eth"
        }
      ],
      "response": {
        "type": "object",
        "description": "Pool data response"
      },
      "authentication": false
    }
  ]
}
