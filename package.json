{
  "name": "hl-eco-mcp",
  "version": "0.1.9-alpha",
  "description": "Gateway to the HyperLiquid Ecosystem for AI agents.",
  "main": "dist/index.js",
  "bin": {
    "hl-eco-mcp": "./dist/bin/hyperliquid-mcp.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc && node scripts/build.js",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "start:mcp": "node dist/bin/hyperliquid-mcp.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage",
    "prepare": "husky",
    "pre-commit": "lint-staged && pnpm run build && pnpm test"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "hyperliquid",
    "trading",
    "defi",
    "ai-agent",
    "claude",
    "cursor",
    "crypto",
    "dex"
  ],
  "author": "Khrafts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/khrafts/hyper-mcp.git"
  },
  "homepage": "https://github.com/khrafts/hyper-mcp#readme",
  "bugs": {
    "url": "https://github.com/khrafts/hyper-mcp/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@msgpack/msgpack": "^3.1.2",
    "axios": "^1.7.2",
    "dotenv": "^16.4.5",
    "ethers": "^6.15.0",
    "winston": "^3.13.0",
    "ws": "^8.18.3",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/msgpack": "^0.0.34",
    "@types/node": "^20.14.2",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "esbuild": "^0.21.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.3.2",
    "ts-jest": "^29.1.4",
    "tsx": "^4.15.4",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "INSTALL.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  }
}
