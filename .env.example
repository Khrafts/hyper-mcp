# Server Configuration
NODE_ENV=development
LOG_LEVEL=info
MCP_SERVER_PORT=3000

# HyperLiquid Configuration
HYPERLIQUID_API_BASE_URL=https://api.hyperliquid.xyz
HYPERLIQUID_WS_URL=wss://api.hyperliquid.xyz/ws
HYPERLIQUID_PRIVATE_KEY=your_private_key_here  # Required for trading
HYPERLIQUID_USER_ADDRESS=your_wallet_address_here  # Required for trading
HYPERLIQUID_NETWORK=mainnet  # Options: 'mainnet' or 'testnet'

# GlueX Configuration (Optional)
GLUEX_API_BASE_URL=https://api.gluex.org
GLUEX_API_KEY=your_gluex_api_key_here

# Node Info API Configuration
NODE_INFO_API_BASE_URL=https://api.nodeinfo.hyperliquid.xyz

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Rate Limiting
API_RATE_LIMIT_REQUESTS_PER_MINUTE=60
WEBSOCKET_RECONNECT_DELAY_MS=5000
API_TIMEOUT_MS=30000

# Risk Management
DEFAULT_POSITION_LIMIT=1000000
DEFAULT_MAX_DRAWDOWN_PERCENT=10
DEFAULT_VAR_CONFIDENCE_LEVEL=0.95

# Caching and Performance
CACHE_TTL_SECONDS=60
MAX_CONCURRENT_REQUESTS=10

# Development
ENABLE_DEBUG_LOGGING=false
MOCK_EXTERNAL_APIS=false